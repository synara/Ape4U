@model RedeSocialCondominio.ViewModels.EncomendaViewModel

@using (Html.BeginForm("RegistrarEncomenda", "Encomenda", method: FormMethod.Post))
{
    <div class="text-center">
        <img src="~/Images/box.png" width="100" alt="" />
        <h3>Registro de encomendas</h3>
        <h4>Cadastre e consulte as suas encomendas</h4>
    </div>

    <br />

    if (Model.Sucesso) // ta dando erro! Não sei por que :(
    {
        <div>
            <div class="alert alert-success" role="alert">Sua(s) encomenda(s) foi/foram registrada(s) com sucesso!</div>
        </div>
    }

    <div class="col-md-6">

        <div class="agendar-visitante">
            <h4>
                <span class="negrito">
                    Olá, @Model.NomeUsuarioLogado!
                </span>
            </h4>
            <br />

        </div>

        <div>
            <b>Todos os campos com <span class="obrigatorio">*</span> são obrigatórios. </b>
        </div>

        <div>
            <div class="fields-align">
                @Html.Label("Descrição: ") <span class="obrigatorio">*</span>
                @Html.TextBoxFor(m => m.Descricao, new { @class = "form-control", required = "required" })
            </div>
            <div class="fields-align">
                @Html.Label("Frágil: ") <span class="obrigatorio">*</span>
                @Html.CheckBoxFor(m => m.Fragil)
            </div>
            <div class="fields-align">
                @Html.Label("Quem vai receber: ") <span class="obrigatorio">*</span>
                @Html.TextBoxFor(m => m.NomeResponsavel, new { @class = "form-control", required = "required" })
            </div>
            <div class="fields-align">
                <button type="submit" class="btn btn-primary">Incluir</button>&nbsp;
                <button class="btn btn-secondary">@Html.ActionLink("Voltar", "Index", "Home")</button>

            </div>

        </div>

    </div>
}

